[colors]
;background = ${xrdb:color0:#222}
background = #302D41
background-alt = #575268
;foreground = ${xrdb:color7:#222}
foreground = #F5E0DC
foreground-alt = #988BA2
primary = #DDB6F2
secondary = #f5c2e7
alert = #f28fad
green = #ABE9B3

[bar/top]
width = 100%
height = 40
radius = 5
fixed-center = true
bottom = false
background = ${colors.background}
foreground = ${colors.foreground}


font-0 = "Fira Code Nerd Font:pixelsize=12;1"
font-1 = "Noto Sans CJK JP:pixelsize=12;1"
module-margin-left = 1
module-margin-right = 3

modules-left = i3 mpd-title
modules-center =
modules-right = title backlight battery pulseaudio

tray-position= right
tray-padding = 3

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 30
;offset-x = 1%
;offset-y = 0%
radius = 3
fixed-center = true
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

